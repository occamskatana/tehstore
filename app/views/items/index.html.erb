<div class="container-fluid">
	<h1 align="center">Marketplace</h1>
	<br>
	<div class="row">
	 SORT BY:
	<%= sortable "sale_price" %>
	<%= sortable "title" %>
	<%= sortable "created_at", "Time" %>
		<div class="col-md-6">
			<% if current_user %>
				<div class="button-new">
					<%= link_to "New Item", new_item_path, class: 'btn btn-success' %>
				</div>
			<% end %>	
		</div>
		<div class="col-md-6">
			<%= form_tag(items_path, :method => "get", id: "search-form") do %>
				<%= text_field_tag :search, params[:search], placeholder: "Search Listings" %>
				<%= submit_tag "Search" %>
			<% end %> <br />
		</div>
	</div>

	<div class="container">
	<% @items.each do |item| %>
		<div class="row index">
			<div class="col-md-4 item-title"><h3>
				<%= link_to "#{item.title.capitalize}", item_path(item) %></h3>
				<%= image_tag item.avatar.url(:thumb) %>
			</div> 
			<div class="col-md-4 price">
				<h3>Price: <strong> <%= item.sale_price %> </strong></h3>
				<p>Posted: <strong> <%= distance_of_time_in_words(item.created_at.time, Time.now)%> ago by <%= item.user.first_name + " " + item.user.last_name %></strong></p><br />
				<p><strong> Tags:</strong> <%= item.tag_list %> </p>
			</div>
			<div class="col-md-4 item-buttons">
				<% if current_user && current_user.admin? || item.user == current_user %>
					<%= link_to "Delete", item_path(item), method: :delete, class: 'btn btn-danger' %>
					<%= link_to "Details", item_path(item), class: 'btn btn-primary' %>
					<%= link_to "Edit", edit_item_path(item), class: 'btn btn-info' %>
					<%= render partial: 'favorites/favorite', locals: {item: item} %>
				<% else %>
					<%= link_to "Details", item_path(item), class: 'btn btn-primary' %>
					<%= render partial: 'favorites/favorite', locals: {item: item} %>
					<% end %>
			</div>
		</div>	
		<% end %>
	</div>

</div>
