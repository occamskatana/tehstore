<div class="container-fluid">
	<h1 align="center">Marketplace</h1>
	<br>
	<div class="row">
		<div class="col-md-3">
			<% if current_user %>
				<div class="button-new">
					<%= link_to "New Item", new_item_path, class: 'btn btn-success' %>
				</div>
			<% end %>	
		</div>

		<div class="col-md-3">
			<div class="btn-group" role="group" aria-label="Sort By">
			  <%= sortable "sale_price", "Price"%>
			  <%= sortable "title" %>
			  <%= sortable "created_at", "Time" %>
			</div>
		</div>
		<div class="col-md-6">
			<%= form_tag(items_path, :method => "get", id: "search-form") do %>
				<%= text_field_tag :search, params[:search], placeholder: "Search Listings" %>
				<%= submit_tag "Search" %>
			<% end %> <br />
		</div>
	</div>

	<div class="container" id="items">
	<%= render @items %>
	</div>
	<%= will_paginate @items %>
</div>
