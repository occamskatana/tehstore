<div class="container-fluid">
	<h1 align="center">Marketplace</h1>
	<br>
	<% if current_user %>
		<div class="button-new">
			<%= link_to "New Item", new_item_path, class: 'btn btn-success' %>
		</div>
	<% end %>	
	<div class="container">
	<% @items.each do |item| %>
		<div class="row index">
			<div class="col-md-4 item-title"><h3>
				<%= link_to "#{item.title}", item_path(item) %></h3>
				<p>Posted: <strong> <%= distance_of_time_in_words(item.created_at.time, Time.now)%> ago by <%= item.user %></strong></p>
			</div> 
			<div class="col-md-4 price"><h3>Price: <strong> <%= item.sale_price %> </strong></h3></div>
			<div class="col-md-4 item-buttons"><%= link_to "Details", item_path(item), class: 'btn btn-primary' %> </div>
		</div>	
		<% end %>
	</div>

</div>
