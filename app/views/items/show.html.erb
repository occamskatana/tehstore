<div class="container-fluid">
	<div class="container item-show-title" align="center">
		<h2><%= @item.title.capitalize %></h2>&nbsp;<p><%= distance_of_time_in_words(@item.created_at.time, Time.now).capitalize%> old</p>
	</div>

	<div class="container-fluid">
		<div class="row">
		<div class="col-md-6">
			<br />
				<h3 align="center"><%= image_tag @item.avatar.url(:medium) %></h3>
			</div>
			<div class="col-md-6">
				<div class="container-fluid well">
					
						<h5 align="left"><%= @item.public_description %></h5>
						<h3>Location: <strong><%= @item.country %> </strong> </h3>
						<h3>Price: $<%= @item.sale_price %></h3>

				</div>
				<strong><h4> Share this Item!</h4></strong>
				<%= social_share_button_tag(@item.title, popup: true) %><br />
				<strong>Tags: <%= @item.tag_list %></strong>
			
				<h3><%= pluralize(@item.favorites.count, 'Favorite')%></h3>
				<%= link_to "Haggle"," ", class: 'btn btn-warning' %>
				<%= link_to "Buy Now!", "", class: 'btn btn-success' %>
				<% if current_user %>
					<%= render partial: 'favorites/favorite', locals: {item: @item} %>
				<% end %>
				<br>
				<br>
				<%= link_to "Back", items_path, class: 'btn btn-primary' %>
			</div>
		</div>
		<br >
	</div>
</div>

