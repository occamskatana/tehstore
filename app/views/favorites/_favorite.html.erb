<% if favorite = current_user.favorite_for(item) %>
	<%= link_to [item, favorite], class: 'btn btn-danger', method: :delete do %>
		<i class="glyphicon glyphicon-star-empty"></i>&nbsp; Unfavorite
	<% end %>
<% else %>
	<%= link_to [item, Favorite.new], class: 'btn btn-info', method: :post do %>
		<i class="glyphicon glyphicon-star"></i>&nbsp; Favorite
	<% end %>
<% end %>