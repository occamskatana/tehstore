
<div class="container-fluid">
	<div class="page-header">
	<%= render "toolbar" %>
		<h1 align="center"><%= @user.first_name + " " + @user.last_name %></h1>
	</div>
	<div class="row">
	  <div class="col-md-6">
		  <div class="container-fluid">
		  	<h3>Favorited Items</h3>
		  	<% @user.favorites.each do |f| %><h4>
			  	<div class="col-md-4">
			  		<%= link_to "#{f.item.title}", item_path(f.item) %>
			  	</div>
			  	<div class="col-md-4">
			  		<%= f.item.country %>
			  	</div>
			  	<div class="col-md-4">
			  	<strong>$<%= f.item.sale_price %></strong>
			  	</div>
		  	<% end %></h4>
		  </div>
	  </div>
	  <div class="col-md-6">
	  	<div class="row">
	  		<div class="span6">
	  		<h2><%= pluralize(@user.items.count, "Item") %> for sale</h2>
	  		</div>
	  		<div class="span6">
		  		<% @user.items.each do |i| %>
		  			<h4><%= link_to "#{i.title.capitalize}", item_path(i) %>: &nbsp; <strong><%= i.sale_price %>$</h4></strong>
		  			
		  		<% end %>
		  	</div>
		  </div>
	  </div>
	</div>
</div>