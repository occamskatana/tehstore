
<%= render "toolbar" %>
<br >
<div class="container-fluid">
	<div class="row">
	  <div class="col-md-6">
	  	<h3 align="center"><%= @user.first_name + " " + @user.last_name %></h3>
	  </div>
	  <div class="col-md-6">
	  	<div class="row">
	  		<div class="span6">
	  		<h2><%= pluralize(@user.items.count, "Items") %> for sale</h2>
	  		</div>
	  		<div class="span6">
		  		<% @user.items.each do |i| %>
		  			<h4><%= link_to "#{i.title.capitalize}", item_path(i) %>: &nbsp; <strong><%= i.sale_price %>$</h4></strong>
		  			
		  		<% end %>
		  	</div>
		  </div>
	  </div>
	</div>
</div>