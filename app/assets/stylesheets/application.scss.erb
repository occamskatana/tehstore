@import "bootstrap";
@import "social-share-button";

.order-body {
  margin-bottom: 50px;
}

.warning {
  color: red;
}

.user-view-orders {
  margin: 40px;
  
}
.order-show {
  padding: 10px;
}

.wordwrap { 
   white-space: pre-wrap;      /* CSS3 */   
   white-space: -moz-pre-wrap; /* Firefox */    
   white-space: -pre-wrap;     /* Opera <7 */   
   white-space: -o-pre-wrap;   /* Opera 7 */    
   word-wrap: break-word;      /* IE */
}

.pretty .btn-default .current {
  padding-right: 12px;
  background-repeat: no-repeat;
  background-position: right center;
}

.pretty .btn-default .asc {
  background-image: url(/images/up_arrow.gif);
}

.pretty .btn-default .desc {
  background-image: url(/images/down_arrow.gif);
}


.copyright {
  margin-top: 25px;
}
html {
  position: relative;
  min-height: 100%;
}
body {
  /* Margin bottom by footer height */
  margin-bottom: 80px;
}
.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 60px;
  background-color: #f5f5f5;
}

.items-show-container {
  border: 2px solid black;
}

.account-balance {
  padding-top: 33px;
}

.user-top-bar {
  padding-left: 10px;
  padding-right: 10px;
}

.button-new {
  margin-bottom: 10px;
}

.item-info {
  border-bottom: 2px solid black;
}

.item-show-title {
  border-bottom: 2px solid black;
}

.item-buttons {
  margin-top: 40px;
}
.item-title {
  margin-top: -8px;
  margin-bottom: 5px;
}

.price {
  margin-top: 15px;
}
.index{
  border-top: black 2px solid;
}


.jumbotron {

  background: url(<%= asset_path 'wp2.jpg' %>) center center;
  margin-left: 5px;
  margin-right: 5px;
  margin-bottom: 30px;
  color: white;
  -webkit-text-fill-color: white; /* Will override color (regardless of order) */
   -webkit-text-stroke-width: .5px;
   -webkit-text-stroke-color: black;

}

.buttans {
  vertical-align: center;
}

.pull-right{
  margin-top: -75px;
}

.user-form {
  max-width: 45%;
  
}

.form-wide {
  max-width: 60%;
  padding: 19px 29px 29px;
  margin: 0 auto 20px;
  background-color: #fff;
  border: 1px solid #e5e5e5;
  -webkit-border-radius: 5px;
     -moz-border-radius: 5px;
          border-radius: 5px;
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
     -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
          box-shadow: 0 1px 2px rgba(0,0,0,.05);
}
.border-form-div .form-signin-heading,
.border-form-div .checkbox {
  margin-bottom: 10px;
}
.border-form-div input[type="text"],
.border-form-div input[type="email"],
.border-form-div input[type="password"] {
  font-size: 16px;
  height: auto;
  margin-bottom: 15px;
  padding: 7px 9px;
}

